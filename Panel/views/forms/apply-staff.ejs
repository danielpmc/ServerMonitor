  <div class="container">
   <div id="errormessage"></div>
   <div class="col-lg-7 card server-form-panel">
      <article class="card-body">
         <form action="" method="post" role="form">
            <input type="hidden" name="id" value="<%= user.id %>">

              <h5>Console Email: <span style="color:red">*</span></h5>
             <div class="form-group input-group">
               <div class="input-group-prepend">
                  <span class="input-group-text"><i class="fa fa-user" style="padding:0"></i></span>
               </div>
               <input name="cemail" id="cemail" class="form-control xtags" placeholder="Whats your console email? (Used to verify that you host here)" type="text" value="" required>
            </div>
            <br>
              
      <h5>How long have you been in DBH? <span style="color:red">*</span></h5>
             <div class="form-group input-group">
               <div class="input-group-prepend">
                  <span class="input-group-text"><i class="fa fa-info" style="padding:0"></i></span>
               </div>
                <select class="custom-select" id="joindate" name="joindate" required>
             
                <option selected>Select...</option>
                
                <option> Less than 10 days </option>
                <option> Less than 1 month </option>
                <option> Longer than 1 month </option>
                </select>              
            </div>
            <br>

              <h5>Previous experiences: <span style="color:red">*</span></h5>
             <div class="form-group input-group">
               <div class="input-group-prepend">
                  <span class="input-group-text"><i class="fa fa-user" style="padding:0"></i></span>
               </div>
               <input name="prev" id="prev" class="form-control xtags" placeholder="Let us know about previous experiences!" type="text" value="" required>
            </div>
            <br>
            <h5>Coding knowledge: <span style="color:red">*</span></h5>
             <div class="form-group input-group">
               <div class="input-group-prepend">
                  <span class="input-group-text"><i class="fa fa-user" style="padding:0"></i></span>
               </div>
               <input name="coding" id="coding" class="form-control xtags" placeholder="Not needed but is good to have for most issues!" type="text" value="" required>
            </div>
           <br>
           <h5>Any projects you are proud of? <span style="color:red">*</span></h5>
             <div class="form-group input-group">
               <div class="input-group-prepend">
                  <span class="input-group-text"><i class="fa fa-user" style="padding:0"></i></span>
               </div>
               <input name="projects" id="projects" class="form-control xtags" placeholder="What are any projects you have made that you are proud of?" type="text" value="" required>
            </div>

            <hr>
            
            <div class="form-group">
               <button type="submit" class="btn btn-red btn-block" id="ssubm" name="ssubm" onclick="return xcheck();">Submit</button>
            </div>
            
         </form>
